<h1>Show Restaurant</h1>
  <%= @restaurant.name %>
  <%= @restaurant.address %>
  <%= @restaurant.phone_number %>
  <%= @restaurant.category %>

  <ul>
    <% @restaurant.reviews.each do |review| %>
      <li><%= review.rating %></li>
      <li><%= review.content %></li>
    <% end %>
  </ul>

  <%= simple_form_for [ @restaurant, @review ] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating %>
  <%= f.submit "Submit review", class: "btn btn-primary" %>
<% end %>
